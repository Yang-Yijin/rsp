<div class="nested-fields">
  <div class="form-group">
    <%= f.label :position, "Step Number" %>
    <%= f.number_field :position, class: "form-control", min: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :instructions, "Instructions" %>
    <%= f.text_area :instructions, rows: 3, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= link_to_remove_association "Remove", f, class: "btn btn-outline-danger btn-sm" %>
  </div>
</div>